# .htaccess in the document root
RewriteEngine On

# Redirect HTTP to HTTPS (optional)
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Serve the Angular frontend for the root URL
RewriteRule ^$ /client/dist/ [L]

# Rewrite rules for serving the Symfony backend from /backend directory
RewriteCond %{REQUEST_URI} !^/backend/
RewriteRule ^(.*)$ /server/public/$1 [L]